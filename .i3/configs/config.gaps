#i3-gaps settings
set $gapsw 2
focus_follows_mouse no
for_window [class="^.*"] border pixel $gapsw
new_window pixel $gapsw
#for_window [floating] border pixel $gapsw
#for_window [tiling] border pixel $gapsw
#for_window [tiling] pixel $gapsw
gaps inner 15
gaps outer 10


assign [class="Steam"] 5:Steam
for_window [instance="crx_nckgahadagoaajjgafhacjanaoiihapd"] floating enable
for_window [instance="crx_nckgahadagoaajjgafhacjanaoiihapd"] resize set 280 px 420 px 
